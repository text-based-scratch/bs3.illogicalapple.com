doctype html

html(lang="en")
  head
    title text based scratch
    script(src="js/index.js")
    link(rel="stylesheet", href="css/index.css")
    link(rel="shortcut icon" href="favicon.ico")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&display=swap" rel="stylesheet")
  body
    nav
      a.option(href="javascript:void(0)" tabindex="1") File
      a.option(href="javascript:void(0)" tabindex="2") Edit 
      .divider
      input.title(type="text", value="Untitled Project", tabindex="3")
      input.load-file(type="file", name="load-file", accept=".sb3")
    main 
      .left
        ul.tabs
          li.tab.active
            img(src="assets/code-icon.svg", alt="Code Icon" draggable="false")
            span Code
        .editor
          .files
          .contenteditable(contenteditable="true")
            |&nbsp;
          .text-editor(tabindex="4")
            pre.text
              div.caret.animation
      .right
        include includes/player.pug
        .sprite-pane
          .sprite-selector 
            .sprite-info
              .sprite-info-row
                .sprite-option
                  label(for="sprite-name") Sprite 
                  input.sprite-name(placeholder="Name" name="sprite-name")
                .flex-grow.sprite-option.flex
                  img(src="assets/x-icon.svg", alt="Left-right icon")
                  label(for="sprite-x") x
                  input.flex-grow.sprite-x(placeholder="x" name="sprite-x")
                .flex-grow.sprite-option.flex
                  img(src="assets/y-icon.svg", alt="Left-right icon")
                  label(for="sprite-y") y
                  input.flex-grow.sprite-y(placeholder="y" name="sprite-y")
              .sprite-info-row 
                .sprite-option.flex-grow
                  label(for="file-path") File Path 
                  input.file-type.flex-grow(placeholder="path/to/file.tbsprite" name="file-path")
          .stage-selector
            .sprite-pane-header.stage-header
              span Stage