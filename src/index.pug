doctype html

html(lang="en")
  head
    title text based scratch
    script(src="index.js") 
    script(src="scratch-vm/dist/web/scratch-vm.min.js") 
    link(rel="stylesheet", href="css/index.css")
    link(rel="shortcut icon" href="favicon.ico")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&display=swap" rel="stylesheet")
  body
    nav
      a.option(href="javascript:void(0)" tabindex="1") File
      a.option(href="javascript:void(0)" tabindex="2") Edit 
      div.divider
      input.title(type="text", value="Untitled Project", tabindex="3")
    main 
      div.left
        ul.tabs
          li.tab.active
            img(src="assets/code-icon.svg", alt="Code Icon" draggable="false")
            span Code
        div.editor
          div.files
          div.contenteditable(contenteditable="true")
            br
          div.text-editor(tabindex="4")
            div.caret.animation
            pre.text
      div.right